project 'CattleSteamerHousekeeper.xcodeproj'

# Uncomment the next line to define a global platform for your project
source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '9.0'

target 'CattleSteamerHousekeeper' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!
  
  pod 'SnapKit' #https://github.com/SnapKit/SnapKit（自动布局）
  pod 'SwiftyJSON' #https://github.com/SwiftyJSON/SwiftyJSON
  pod 'ObjectMapper' #https://github.com/Hearst-DD/ObjectMapper
  pod 'Alamofire' #https://github.com/Alamofire/Alamofire 
  pod 'Kingfisher' #https://github.com/onevcat/Kingfisher (图片加载)
  pod 'ESPullToRefresh' #https://github.com/eggswift/pull-to-refresh 
  pod 'IQKeyboardManagerSwift' #https://github.com/hackiftekhar/IQKeyboardManager 
  pod 'Spring', :git => 'https://github.com/MengTo/Spring.git', :branch => 'swift3' #https://github.com/MengTo/Spring 
  pod 'ChameleonFramework/Swift', :git => 'https://github.com/ViccAlexander/Chameleon.git' #https://github.com/ViccAlexander/Chameleon
  pod 'CryptoSwift', :git => "https://github.com/krzyzanowskim/CryptoSwift", :branch => "master"
  pod 'NVActivityIndicatorView' #https://github.com/ninjaprox/NVActivityIndicatorView 
  pod 'PermissionScope' #https://github.com/nickoneill/PermissionScope
  pod 'RxSwift' #https://github.com/ReactiveX/RxSwift 
  pod 'RxCocoa' 
  
  target 'CattleSteamerHousekeeperTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'CattleSteamerHousekeeperUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
